<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".SingleplayerActivity">

    <Button
        android:id="@+id/coingrabId"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginStart="101dp"
        android:layout_marginLeft="101dp"
        android:layout_marginEnd="102dp"
        android:layout_marginRight="102dp"
        android:background="@drawable/coin"
        android:text="@string/coin_grab"
        app:layout_constraintBaseline_toBaselineOf="@+id/FlappyBirdBtn1"
        app:layout_constraintEnd_toStartOf="@+id/FlappyBirdBtn1"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/FlappyBirdBtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/bird1"
        android:text="@string/flappy_bird"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/coingrabId"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>